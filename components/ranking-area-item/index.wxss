/* components/ranking-area-item/index.wxss */
.item {
    display: flex;
    /* align-items: center; */
    position: relative;
    background-color: #eee;
    border-radius: 12rpx;
    margin-bottom: 15px;
    width: 95vw;
    overflow: hidden;
    justify-content: space-between;
}

.content {
    /* flex: 1; */
    width: 0;
    width: 50%;
    padding: 24rpx;
    overflow: hidden;
}

.header {
    font-size: 15px;
    font-weight: 600;
}


.content-list {
    font-size: 24rpx;
    /* margin-top: 10rpx; */
    width: 100%;
    margin-top: 10rpx;
}


.arName {
    font-size: 14px;
    color: #999999;
}

.song1,
.song2,
.song3 {
    color: #333;
    width: 100%;
    font-size: 14px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    margin-bottom: 5rpx;
    display: inline-block;
}

.album {
    display: none;
    position: absolute;
    right: 0;
    width: 40%;
    height: 100%;
    display: flex;
    /* right: 0; */
    flex: 1;

}

.album .image {
    /* width: 100px;
    height: 100px; */
    /* display: block; */
    position: absolute;
    right: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    /* border-radius: 6px; */
}


.album .playCounter {
    position: absolute;
    right: 0;
    bottom: 0rpx;
    color: #fff;
    font-size: 22rpx;
    border-radius: 12rpx;
    padding: 6rpx 10rpx;
    background: rgba(0, 0, 0, .5);
}