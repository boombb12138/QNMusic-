<!--components/menu-item-v1/index.wxml-->
<wxs src='../../utils/format.wxs' module="format"></wxs>

<view class="item">
    <view class="top">
        <image class="image" src="{{item.coverImgUrl}}" mode="widthFix"></image>
        <view class="playCount">{{format.formatCount(item.playCount)}}</view>
    </view>
    <view class="bottom">
        {{item.name}}
    </view>
</view>