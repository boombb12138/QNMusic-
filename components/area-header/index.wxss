/* components/area-header/index.wxss */

.header{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 88rpx;
}

.header .title{
    font-weight: 600;
    font-size: 36rpx;
}

.header .slot:empty + .default{
    display: flex;
}

.header .default{
    display: none;
    align-items: center;
    font-size: 28rpx;
    color: #0e0c0c9f;
}

.header .default .icon{
    width: 30rpx;
    height: 30rpx;
}